    <!-- BottomNav -->
    <style name="TinPet.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#00FFFFFF</item>
    </style>
    <style name="BottomNav" >
