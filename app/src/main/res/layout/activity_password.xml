<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anonymus.PasswordActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="530dp"
        android:layout_height="399dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_dog_phone" />

    <TextView
        android:id="@+id/textView6"
        style="@style/PinkSemiBoldSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ingresa una contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView7"
        style="@style/BlackRegularSubtittle14"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="11dp"
        android:text="¡Ya casi está listo! Recuerda establecer una contraseña segura"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/etPasswordRegistro"
        style="@style/InputWhite"
        android:layout_width="348dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/inputicon_lock"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        style="@style/InputWhite"
        android:id="@+id/etPasswordRepeatRegistro"
        android:layout_width="348dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/inputicon_lock"
        android:ems="10"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordRegistro"
        app:layout_constraintStart_toStartOf="@+id/etPasswordRegistro"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordRegistro" />

    <Button
        android:id="@+id/btnRegister_final"
        style="@style/BtnPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pbCreatePetLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>