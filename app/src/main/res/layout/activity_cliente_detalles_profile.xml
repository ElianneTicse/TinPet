<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.ClienteDetallesProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="67dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTIDetalleDisp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFEBEE">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/isPetImages"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:backgroundTint="#FFEBEE"
                        app:iss_auto_cycle="true"
                        app:iss_delay="2000"
                        app:iss_period="2000"
                        app:iss_placeholder="@drawable/cat_love"
                        app:iss_title_background="@string/app_name">

                        <ImageButton
                            android:id="@+id/ibClienteFriendDetalleBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="11dp"
                            android:background="?actionBarItemBackground"
                            android:onClick="backButton"
                            android:scaleType="center"
                            android:src="@drawable/btn_atras"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </com.denzcoskun.imageslider.ImageSlider>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/GraySemiBold14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Pompom"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/lexend_extralight"
                        android:text="Pompom21"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            app:srcCompat="@drawable/location" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Miraflores,Lima"
                            android:textColor="@color/pink_100"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/sexo_macho" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/PinkMedium12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Dueño" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="PercyBu"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="+51  999666333"
                        android:textColor="#80FF0052"
                        android:textSize="15sp" />


                </LinearLayout>


                <ImageButton
                    android:layout_width="72dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/icon_wsp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Sobre mi"
                android:textColor="@color/pink_100"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="240dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="#99FFB800"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#99FFB800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/WhiteLexendRegular13"
                            android:layout_marginTop="4dp"
                            android:layout_width="218dp"
                            android:layout_height="71dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="Soy Lucy, un gatita cruzada muy amigable. Me gusta salir a pasear, en mis ratos libres me dedico a comer atún y dormir. " />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="4dp"
                        app:cardBackgroundColor="#B3FD9251"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="#B3FD9251">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginVertical="4dp">

                            <TextView
                                style="@style/PinkMedium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cruzada"
                                android:gravity="center"/>

                            <TextView
                                style="@style/WhitePoppinsRegular10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Raza"
                                android:gravity="center"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        app:cardBackgroundColor="#B3FD9251"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginVertical="4dp">

                            <TextView
                                style="@style/PinkMedium12"
                                android:id="@+id/textView23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="24meses"
                                android:gravity="center"/>

                            <TextView
                                style="@style/WhitePoppinsRegular10"
                                android:id="@+id/textView22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Edad"
                                android:gravity="center"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Ubicación"
                android:textColor="@color/pink_100"
                android:textSize="15sp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp" />

            <Button
                style="@style/BtnPrimary"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:text="Enviar solicitud  ♥" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>