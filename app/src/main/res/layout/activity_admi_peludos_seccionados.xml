<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrador.AdmiPeludosSeccionadosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llTittleReportesList"
                style="@style/LayoutTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibAdmiReporteListUsersBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?actionBarItemBackground"
                    android:clickable="true"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    app:srcCompat="@drawable/btn_atras" />

                <TextView
                    android:id="@+id/tvTittleReportesList"
                    style="@style/PinkSemiBoldSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:text="Peludos seccionados" />

            </LinearLayout>

            <TextView
                style="@style/OrangeMedium16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:text="Encuentra aquÃ­ la cantidad de usuarios por tipo de mascota." />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAdmiCats"
                style="@style/PinkyLightCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAdmiMonth"
                tools:layout_editor_absoluteX="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="12dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="197dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/PinkSemiBold32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gatitos" />

                        <TextView
                            android:id="@+id/tvAdmiCatsNumber"
                            style="@style/PurpleSemiBold35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1520" />

                        <TextView
                            style="@style/OrangeSemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="usuarios" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="207dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/cat_inlove" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAdmiDogs"
                style="@style/PinkyLightCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAdmiMonth"
                tools:layout_editor_absoluteX="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="12dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="56dp"
                    tools:layout_editor_absoluteY="197dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/PinkSemiBold32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perritos" />


                        <TextView
                            android:id="@+id/tvAdmiDogsNumber"
                            style="@style/PurpleSemiBold35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1520" />

                        <TextView
                            style="@style/OrangeSemibold24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="usuarios" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="207dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/perrito_check" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/alce_question" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>