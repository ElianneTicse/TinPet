<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#00FFFFFF">

        <LinearLayout
            android:background="#F65151"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp">

                        <TextView
                            android:id="@+id/tvClienteTipsTittle"
                            style="@style/WhitePoppinsBold14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¿No quiere comer?" />

                        <TextView
                            android:id="@+id/tvClienteTipsDescription"
                            style="@style/WhiteMontBold12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:lines="5"
                            android:text="Algunas mascotitas no quieren comer sus croquetas dado que no estan acostumbradas. Una sugerencia es combinarlas con algún paté saludable. " />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivClienteTipIcon"
                    android:layout_width="114dp"
                    android:layout_height="109dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_bell" />
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>