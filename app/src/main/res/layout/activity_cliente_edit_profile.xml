<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.ClienteEditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                style="@style/LayoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?actionBarItemBackground"
                    android:clickable="true"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    app:srcCompat="@drawable/btn_atras" />

                <TextView
                    style="@style/PinkSemiBoldSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:text="Editar Perfil" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivClienteProfilePerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:padding="40dp"
                    android:scaleType="fitCenter"
                    app:shapeAppearanceOverlay="@style/ImageView.CornerCircular"
                    app:srcCompat="@drawable/imagen_gatito" />

                <ImageView
                    android:id="@+id/btnEditFoto"
                    android:layout_width="65dp"
                    android:layout_height="63dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="44dp"
                    android:layout_marginRight="45dp"
                    android:src="@drawable/ic_editar_btn"
                    />
            </RelativeLayout>
            <TextView
                android:paddingHorizontal="30dp"
                style="@style/PinkLexendSemiBold14"
                android:id="@+id/tv_static_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <EditText
                style="@style/InputWhite"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/etNombreMiPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:id="@+id/tv_static_edad"
                        style="@style/PinkLexendSemiBold14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edad" />

                    <EditText
                        android:id="@+id/etEdadMiPerfilE"
                        style="@style/InputWhite"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:id="@+id/tv_static_raza"
                        style="@style/PinkLexendSemiBold14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Raza" />

                    <EditText
                        android:id="@+id/etRazaMiPerfilE"
                        style="@style/InputWhite"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_static_sexo"
                        style="@style/PinkLexendSemiBold14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sexo" />

                    <EditText
                        android:id="@+id/etSexoMiPerfilE"
                        style="@style/InputWhite"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:paddingHorizontal="30dp"
                style="@style/PinkLexendSemiBold14"
                android:id="@+id/tv_static_fotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fotos"/>

            <GridLayout
                android:id="@+id/glFotosEditar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="8dp"
                android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="true">

                <com.google.android.material.card.MaterialCardView
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/pink_100"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#2AEA3570"
                        android:scaleType="center"
                        android:src="@drawable/ic_image_placeholder" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="16dp"
                    android:visibility="invisible"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/pink_100"
                        android:scaleType="center"
                        android:src="@drawable/ic_image_placeholder" />
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <ProgressBar
                android:id="@+id/pbEditPetPhotos"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone" />

            <TextView
                android:paddingHorizontal="30dp"
                android:paddingTop="10dp"
                style="@style/PinkLexendSemiBold14"
                android:id="@+id/tv_static_aboutme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sobre mi"/>

            <EditText
                android:id="@+id/etDescripcionMiPerfil"
                style="@style/InputWhite"
                android:layout_marginHorizontal="30dp"
                android:layout_width="350dp"
                android:lines="7"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:paddingHorizontal="30dp"
                android:paddingTop="10dp"
                style="@style/PinkLexendSemiBold14"
                android:id="@+id/tv_static_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación"/>

            <EditText
                style="@style/InputWhite"
                android:layout_marginVertical="4dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/etUbicacionMiPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"/>

            <com.google.android.gms.maps.MapView
                android:layout_marginTop="10dp"
                android:id="@+id/mvUbicacionMiPerfil"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <Button
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/btnActualizarOk"
                style="@style/BtnSecondary"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Actualizar" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>