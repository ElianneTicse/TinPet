<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="128dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:layout_marginHorizontal="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImageSelectorCategory"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:foregroundGravity="center"
        android:src="@drawable/ic_profile_focused"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvImageSelectorCategory"
        style="@style/PinkRegularSubtittle12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Pelusita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivImageSelectorCategory"
        app:layout_constraintStart_toStartOf="@+id/ivImageSelectorCategory"
        app:layout_constraintTop_toBottomOf="@+id/ivImageSelectorCategory" />

</androidx.constraintlayout.widget.ConstraintLayout>